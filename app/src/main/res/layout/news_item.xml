<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    app:cardCornerRadius="20dp"
    android:layout_margin="10dp"
    app:cardPreventCornerOverlap="false"
    app:cardBackgroundColor="@color/lightWhite">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/news_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/pool"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/news_title"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="hfhiuhf12eewfwedweewdwedwedwedwedjkdsnckdsjbvdshkvbhsdkvdsuvbshdvbudushbvuhsdbvusdvbsduvbsudbvsduhcbudscub"
            android:textSize="18sp"
            android:layout_marginHorizontal="10dp"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/news_image"/>

        <TextView
            android:id="@+id/news_descriptions"
            style="@style/TextAppearance.MaterialComponents.Headline3"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:maxLength="127"
            android:text="This Descriptions 11aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaamomromreomoermoemomroeormoemroemromeroemoemroemromeomeormoermoemroemrommmmmm"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@id/news_title"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/news_author"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/news_descriptions"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Alex Utepov"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/news_time"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/news_author"
            app:layout_constraintBottom_toBottomOf="@id/news_author"
            app:layout_constraintStart_toEndOf="@id/news_author"
            android:layout_marginStart="10dp"
            android:text="19-02-2178"
            android:textAlignment="textStart"
            android:textSize="12sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>